vrrp_script chk_ocp {
    script "/etc/keepalived/check_ocp_api.sh"
    interval 1
    weight 50
}

vrrp_script chk_dns {
    script "/etc/keepalived/check_coredns_mdns.sh"
    interval 1
    weight 50
}

vrrp_instance API {
    state BACKUP
    interface ${INTERFACE}
    virtual_router_id 51
    priority 40
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass cluster_uuid_api_vip
    }
    virtual_ipaddress {
        ${API_VIP}
    }
    track_script {
        chk_ocp
    }
}

vrrp_instance DNS {
    state BACKUP
    interface ${INTERFACE}
    virtual_router_id 52
    priority 40
    advert_int 1
    authentication {
        auth_type PASS
        auth_pass cluster_uuid_dns_vip
    }
    virtual_ipaddress {
        ${DNS_VIP} scope link  # Setting link scope so avahi doesn't use the VIP address.
    }
    track_script {
        chk_dns
    }
}

